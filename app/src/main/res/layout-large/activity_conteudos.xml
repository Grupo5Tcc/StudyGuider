<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange"
    tools:context=".view.ToDoListActivity">

    <include
        android:id="@+id/header"
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/conteudos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Conteúdos"
        android:fontFamily="@font/bebas_neue"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <TextView
        android:id="@+id/nome_materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Nome da Matéria"
        android:fontFamily="@font/bebas_neue"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conteudos" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/primeiro_bimestre"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ct_background_conteudos"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nome_materia">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1° BIMESTRE"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/primeiro_bimestre"
            app:layout_constraintTop_toTopOf="@id/primeiro_bimestre"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_add_24"
            app:layout_constraintEnd_toEndOf="@id/primeiro_bimestre"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/segundo_bimestre"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ct_background_conteudos"
        android:fontFamily="@font/roboto_medium"
        android:padding="15dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/primeiro_bimestre">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2° BIMESTRE"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/segundo_bimestre"
            app:layout_constraintTop_toTopOf="@id/segundo_bimestre"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/terceiro_bimestre"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ct_background_conteudos"
        android:fontFamily="@font/roboto_medium"
        android:padding="15dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/segundo_bimestre">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3° BIMESTRE"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/terceiro_bimestre"
            app:layout_constraintTop_toTopOf="@id/terceiro_bimestre"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/quarto_bimestre"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ct_background_conteudos"
        android:fontFamily="@font/roboto_medium"
        android:padding="15dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/terceiro_bimestre">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4° BIMESTRE"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/quarto_bimestre"
            app:layout_constraintTop_toTopOf="@id/quarto_bimestre"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>