                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="ANNA CLARA"
                            android:textColor="@color/blue_1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- idade -->
