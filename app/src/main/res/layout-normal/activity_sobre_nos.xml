                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="idade: 18"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <!-- função -->
