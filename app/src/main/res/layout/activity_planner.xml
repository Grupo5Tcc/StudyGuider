<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange"
    android:orientation="vertical"
    tools:context=".view.PlannerActivity">

    <include
        android:id="@+id/header"
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="366dp"
                android:layout_height="327dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:clickable="true"
                android:clipChildren="false" />

            <LinearLayout
                android:id="@+id/container_tarefas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/ct_planner_task"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19/09/2024"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tarefa1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="- Tarefa 1"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tarefa2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Tarefa 2"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tarefa3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Tarefa 3"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>