<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/containerRec"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/container_rec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/bebas_neue"
        android:text="MATÉRIA:"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/containerRec"
        app:layout_constraintTop_toTopOf="@+id/containerRec" />

    <TextView
        android:id="@+id/materiarec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.7dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/roboto_medium"
        android:text="XXXX-xxxx"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/materia"
        app:layout_constraintTop_toTopOf="@+id/containerRec" />

    <TextView
        android:id="@+id/professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/bebas_neue"
        android:text="PROFFESSOR(A):"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/containerRec"
        app:layout_constraintTop_toTopOf="@+id/containerRec" />

    <TextView
        android:id="@+id/profrec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51.7dp"
        android:layout_marginLeft="85dp"
        android:fontFamily="@font/roboto_medium"
        android:text="XXXX-xxxx"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/professor"
        app:layout_constraintTop_toTopOf="@+id/containerRec" />

    <TextView
        android:id="@+id/nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/bebas_neue"
        android:text="NOTA:"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/containerRec"
        app:layout_constraintTop_toTopOf="@+id/containerRec" />

    <TextView
        android:id="@+id/notarec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87.7dp"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/roboto_medium"
        android:text="XXXX-xxxx"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/nota"
        app:layout_constraintTop_toTopOf="@+id/containerRec" />

    <TextView
        android:id="@+id/conteudos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/bebas_neue"
        android:text="CONTEÚDOS:"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/containerRec"
        app:layout_constraintTop_toTopOf="@+id/containerRec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/conteudos"
        app:layout_constraintTop_toTopOf="@id/sujestoesrec">

        <EditText
            android:id="@+id/conteuos_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/rnd_corners_rec"
            android:fontFamily="@font/roboto_medium"
            android:imeOptions="actionNone"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sujestoesrec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/bebas_neue"
        android:text="SUJESTÕES:"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/containerRec"
        app:layout_constraintTop_toTopOf="@+id/containerRec"
        app:layout_constraintBottom_toTopOf="@id/checkSujes1" />

    <CheckBox
        android:id="@+id/checkSujes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text=" Refazer crediarias e exercicisos de sala;"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:button="@drawable/checkbox"
        android:buttonTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="@id/containerRec"
        app:layout_constraintBottom_toTopOf="@id/checkSujes2"
        app:layout_constraintStart_toStartOf="@id/containerRec" />

    <CheckBox
        android:id="@+id/checkSujes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=" Frequentaar os Plantões;"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:button="@drawable/checkbox"
        android:buttonTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="@id/containerRec"
        app:layout_constraintBottom_toTopOf="@id/checkSujes3"
        app:layout_constraintStart_toStartOf="@id/containerRec" />

    <CheckBox
        android:id="@+id/checkSujes3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=" Fazer listas (e corrigir); "
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:button="@drawable/checkbox"
        android:buttonTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="@id/containerRec"
        app:layout_constraintBottom_toTopOf="@id/checkSujes4"
        app:layout_constraintStart_toStartOf="@id/containerRec" />

    <CheckBox
        android:id="@+id/checkSujes4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text=" Pesquisar exerc[cicios e corrigi-los. "
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:button="@drawable/checkbox"
        android:buttonTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="@id/containerRec"
        app:layout_constraintStart_toStartOf="@id/containerRec" />

</androidx.constraintlayout.widget.ConstraintLayout>