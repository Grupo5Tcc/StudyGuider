<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_clearer"
    tools:context=".view.MateriasActivity">

    <!-- Inclusão do cabeçalho do app -->
    <include
        android:id="@+id/header"
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LinearLayout que centraliza o título 'Matérias' -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@id/header">

        <!-- TextView exibindo o título das matérias -->
        <TextView
            android:id="@+id/txtMaterias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yeseva_one"
            android:layout_marginTop="20dp"
            android:text="Matérias"
            android:textColor="@color/blue_1"
            android:textSize="26sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- RecyclerView para exibir a lista de matérias -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Botão flutuante para adicionar novas matérias -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/orange_1"
        android:src="@drawable/baseline_add_24" />

</RelativeLayout>
